{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "lib": ["esnext"]
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/artifacts",
    "src/tests",
    "src/utils"
  ]
}
